{
	"contexts":["save","edit","delete","chargePreAuthorization","authorizeAndCharge","authorize","credit"],
	"conditions":{
	    "paymentTypeCreditCard":{
	        "getPaymentMethodType":{"eq":"creditCard"}
	    },
	    "paymentTypeTermPayment":{
	        "getPaymentMethodType":{"eq":"termPayment"}
	    },
	    "paymentTypeCreditCardWithAmountAndNoAuthorization":{
	        "getPaymentMethodType":{"eq":"creditCard"},
	        "getAmountAuthorized":{"eq":0},
	        "getAmount":{"eq":0}
	    }
	},
	"properties":{
		"orderPaymentID":		[{"contexts":"delete","maxLength":0}],
		"paymentMethodType":	[{"contexts":"save","required":true}],
		"nameOnCreditCard":		[{"contexts":"save","conditions":"paymentTypeCreditCard","required":true}],
		"creditCardNumber":		[{"contexts":"save","conditions":"paymentTypeCreditCard,paymentTypeCreditCardWithAmountAndNoAuthorization","required":true,"dataType":"creditCardNumber"}],
		"amountUnauthorized":	[{"contexts":"authorize","minValue":0.01}],
		"amountUncaptured":		[{"contexts":"chargePreAuthorization","minValue":0.01}],
		"amountUnreceived":		[{"contexts":"authorizeAndCharge","minValue":0.01}],
		"amountUncredited":		[{"contexts":"credit","minValue":0.01}],
		"paymentMethodType":	[{"contexts":"chargePreAuthorization,authorizeAndCharge,authorize,credit","inList":"creditCard"}],
		"orderStatusCode":		[
		    {"contexts":"chargePreAuthorization,authorizeAndCharge,authorize,credit","inList":"ostNew,ostProcessing,ostOnHold"},
			{"contexts":"edit","inList":"ostNotPlaced,ostNew,ostProcessing,ostOnHold"}
		],
		"termPaymentAccount":	[{"contexts":"save","required":true,"condition":"paymentTypeTermPayment"}]
	}
}
