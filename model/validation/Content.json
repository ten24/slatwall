{
	"conditions":{
	    "notSlatwallCMS":{
	        "site.app.integration.integrationPackage":{"neq":"slatwallcms"}
	    },
	    "topLevelContent":{
	    	"parentContent":{"null":true}
	    },
	    "requireUrlTitle":{
	    	"parentContent":{"required":true}
	    },
	    "notNewContent":{
	    	"newFlag":{"eq":false}
	    }
	},
	"properties":{
		"contentID":			[{"contexts":"save","required":true,"conditions":"notSlatwallCMS"}],
		"urlTitle":				[
			{
				"contexts":"save,create","conditions":"requireUrlTitle","required":true
			},
			{
				"contexts":"save","conditions":"notNewContent","regex":"^[a-z0-9-]+$"
			}
		],
		"urlTitlePath":			[{"contexts":"save","method":"isUniqueUrlTitlePathBySite"}],
		"contentTemplateFile":	[{"contexts":"save","required":true}],
		"site":					[{"contexts":"save","required":true}]
	}
}