{
	"conditions":{
		"giftCardCodeIsNotAutoGenerated": {
			"orderItem.sku.giftCardAutoGenerateCodeFlag":{"eq":false}
		},
		"recipientContactInfoNeeded":{
			"orderItem.sku.giftCardRecipientRequiredFlag":{"eq":true}
		},
		"recipientContactInfoIsNotNeeded":{
			"orderItem.sku.giftCardRecipientRequiredFlag":{"eq":false}
		},
		"giftCardCodeIsNotAutoGeneratedAndRecipientContactInfoIsNotNeeded":{
			"orderItem.sku.giftCardAutoGenerateCodeFlag":{"eq":false},
			"orderItem.sku.giftCardRecipientRequiredFlag":{"eq":false}
		}
	},
	"properties":{
		"orderItem":				[{"contexts":"save","required":true}],
		"emailAddress":             [{"contexts":"save","conditions":"recipientContactInfoNeeded","required":true}],
		"firstName": 				[{"contexts":"save","conditions":"recipientContactInfoNeeded","required":true}],
		"giftCards":				[{"contexts":"edit,delete", "method":"canEditOrDelete"}],
		"giftMessage":              [{"contexts":"save","conditions":"recipientContactInfoNeeded","method":"hasCorrectGiftMessageLength"}],
		"lastName":					[{"contexts":"save","conditions":"recipientContactInfoNeeded","required":true}],
		"manualGiftCardCode":	 	[{"contexts":"save","conditions":"giftCardCodeIsNotAutoGeneratedAndRecipientContactInfoIsNotNeeded","required":true}],
        "quantity":                 [{"contexts":"save","required":true, "minValue":1},{"contexts":"save,edit","conditions":"giftCardCodeIsNotAutoGeneratedAndRecipientContactInfoIsNotNeeded","eq":1}]
	}
}
